# Configuration de sécurité pour les tests locaux
# Copier ce fichier vers .env.local pour activer les tests de sécurité

# Mode dry-run pour tester la sanitisation sans modification
VITE_SECURITY_DRY_RUN=true

# Activer la sanitisation HTML
VITE_ENABLE_HTML_SANITIZATION=true

# Activer la validation stricte des entrées
VITE_ENABLE_STRICT_VALIDATION=false

# Activer les sessions sécurisées (sessionStorage)
VITE_ENABLE_SECURE_SESSIONS=true

# Activer le chiffrement du cache
VITE_ENABLE_CACHE_ENCRYPTION=false

# Activer le rate limiting
VITE_ENABLE_RATE_LIMITING=true

# Activer la sécurité API
VITE_ENABLE_API_SECURITY=true

# Limite de requêtes par minute
VITE_RATE_LIMIT_PER_MINUTE=100

# Longueur maximale des entrées utilisateur
VITE_MAX_INPUT_LENGTH=1000

# Timeout de session en minutes
VITE_SESSION_TIMEOUT_MINUTES=30

# Mode debug pour les logs de sécurité
VITE_SECURITY_DEBUG=true

# Configuration des en-têtes de sécurité
VITE_ENABLE_SECURITY_HEADERS=true

# Configuration des cookies sécurisés
VITE_ENABLE_SECURE_COOKIES=true

# Validation des paramètres d'URL
VITE_ENABLE_URL_VALIDATION=true

# Protection contre les attaques par injection
VITE_ENABLE_INJECTION_PROTECTION=true

# Logging des événements de sécurité
VITE_ENABLE_SECURITY_LOGGING=true

# Mode de test des vulnérabilités
VITE_SECURITY_TEST_MODE=false
